{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/**/*.ts"],
        "buildCommand": "tsc",
        "outputDirectory": "dist"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/numbers",
      "dest": "/api/numbers.ts"
    },
    {
      "src": "/api/numbers/purchase",
      "dest": "/api/numbers.ts"
    },
    {
      "src": "/api/health",
      "dest": "/api/numbers.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Content-Type",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 