{
  "framework": "vite",
  "buildCommand": "npm run build && npm run build:server",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server.ts" }
  ],
  "functions": {
    "api/server.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
} 